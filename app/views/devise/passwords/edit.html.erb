<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: edit_password_path(resource_name), html: { method: :put }) do |f| %>
<%= render partial: "shared/devisemes"%>
  <%= f.hidden_field :reset_password_token %>

  <div class="input-field">
    <%= f.password_field :password,:placeholder=>"New Password", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, :placeholder=>"Confirm new password", autocomplete: "off" %>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Change my password</button>

<% end %>

<%= render "devise/shared/links" %>
